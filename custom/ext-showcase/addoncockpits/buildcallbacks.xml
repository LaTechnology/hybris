<project name="addoncockpits_buildcallbacks">

	<macrodef name="addoncockpits_before_build">
				<sequential>
					
					<if>
						<isset property="ext.cscockpit.path"/>
						<then>
							<echo level="info" message="Start copying custom cscockpit images to cscockpit..."/>
							 <copy todir="${ext.cscockpit.path}/web/webroot/cscockpit/templates">
								<fileset dir="${ext.addoncockpits.path}/resources/addoncockpits/cscockpit/templates">
									<include name="**/**.*" />
								</fileset>
							</copy>
						</then>
					</if>
								

				</sequential>
			</macrodef>
	
</project>
